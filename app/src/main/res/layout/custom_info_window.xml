<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="199dp"
    android:layout_height="200dp"
    android:background="@drawable/info_window"
    android:maxHeight="200dp"
    android:orientation="horizontal"
    android:paddingBottom="21dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="7dp">

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:minWidth="55dp"
        android:orientation="vertical"
        android:paddingBottom="35dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/marker_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/trip" />

        <TextView
            android:id="@+id/marker_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="80dp"
            android:text="17-05-2017"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/marker_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21:00"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="8sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="136dp"
        android:layout_height="match_parent"
        android:minWidth="136dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/participant2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/trip"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/marker_participant2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/trip"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/marker_participant3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/trip"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="128dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="center"
                android:text="Title"
                android:textColor="#ff000000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/snippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="199dp"
                android:text="Description"
                android:textColor="#ff7f7f7f"
                android:textSize="8sp" />

            <LinearLayout
                android:id="@+id/label_price_people"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snippet"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="People"
                    android:textAlignment="center"
                    android:textColor="#ff000000"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Requirements"
                    android:textAlignment="center"
                    android:textColor="#ff000000"
                    android:textSize="8sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_price_people"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/participants"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3/4"
                    android:textAlignment="center"
                    android:textColor="#ff000000"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/marker_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="25$\nsdf\nsdfg"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4sp"
                    android:maxLines="2"
                    android:textAlignment="center"
                    android:textColor="#ff000000"
                    android:textSize="8sp" />
            </LinearLayout>

            <Button
                android:id="@+id/marker_btn"
                android:layout_marginTop="93dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="More info"
                android:textSize="8sp"
                style="@style/Widget.AppCompat.Button.Colored"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
